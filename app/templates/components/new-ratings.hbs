<h1>Please rate us!</h1>

{{#if formIsShown}}
<div>
  <form>
    <div class="form-group">
      <label for="user">Your Name</label>
      {{input value=user id="user"}}
    </div>

    <div class="form-group">
      <label for="rate">Rate</label>
        {{input value=rate type="number" id="rate"}}
      </div>

      <div class="form-group">
        <label for="comment">Comment</label>
        {{input value=comment id="comment"}}
      </div>

      <button {{action 'saveRate'}}>Submit</button>
    </form>
  </div>

  {{else}}
  <button {{action 'newRate'}}>Rate</button>
  {{/if}}
