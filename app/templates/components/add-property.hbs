{{#if addForm}}

<div>
  <form>
    <div class="form-group">
    <label for="author">Name</label>
    {{input value=author id="author"}}
  </div>

  <div class="form-group">
    <label for="restaurant">Restaurant</label>
    {{input value=restaurant id="restaurant"}}
  </div>

  <div class="form-group">
    <label for="city">City</label>
    {{input value=city id="city"}}
  </div>

  <div class="form-group">
    <label for="image">Image</label>
    {{input value=image id="image"}}
  </div>

  <button {{action 'saveProperty'}}>Save</button>
</form>
</div>
{{else}}
<button {{action 'newProperty'}}>Add a restaurant</button>
{{/if}}
